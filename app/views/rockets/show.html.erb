page #show rocket
<div class="container">
  <div class="row">
    <div class="col">
      <%= @rocket.name %>
      <%= @rocket.img_url %>
      <div data-controller="toggle" class="mt-5">
        <button data-action="click->toggle#fire" class="btn btn-outline-primary">Book the <%= @rocket.name %>!</button>
        <div data-toggle-target="togglableElement" class="d-none">
          <%= render "bookings/form", rocket: @rocket %>
        </div>
      </div>
    </div>
  </div>
</div>
