<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home-tab-pane" type="button" role="tab" aria-controls="home-tab-pane" aria-selected="true">My bookings</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile-tab-pane" type="button" role="tab" aria-controls="profile-tab-pane" aria-selected="false">My requests</button>
  </li>

</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
    <% @bookings.each do |booking| %>
        <%= link_to booking_path(booking), class: "btn card rounded-4 col-4 p-0 m-5 w-25 border-1 border-white shadow" do%>
          <img src="<%= booking.rocket.img_url %>" alt="Picture of <%= booking.rocket.name %>" class="card-img-top h-100 rounded-top-4" >
          <div class="card-body">
            <h5 class="card-title mb-2"><%= booking.rocket.name %></h5>
            <p class="card-text m-0"> Booked for <%= booking.number_of_days %> day</p>
            <p class="card-text m-0"> From <%= booking.start_date %> to <%= booking.end_date %></p>
            <p class="card-text m-0"> Total price : <%= booking.full_price %> $</p>
          </div>
        <% end %>
      <% end %>
  </div>
  <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
      <% @requests.each do |request| %>
        <%= link_to booking_path(request), class: "btn card rounded-4 col-4 p-0 m-5 w-25 border-1 border-white shadow" do%>
          <img src="<%= request.rocket.img_url %>" alt="Picture of <%= request.rocket.name %>" class="card-img-top h-100 rounded-top-4" >
          <div class="card-body">
            <h5 class="card-title mb-2"><%= request.rocket.name %></h5>
            <p class="card-text m-0"> Booked for <%= request.number_of_days %> day</p>
            <p class="card-text m-0"> From <%= request.start_date %> to <%= request.end_date %></p>
            <p class="card-text m-0"> Total price : <%= request.full_price %> $</p>
          </div>
        <% end %>
      <% end %>
  </div>
</div>

