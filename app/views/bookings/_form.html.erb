<div class="container-sm mt-5 bg-secondary-subtle rounded-3 shadow-sm">
  <div class="m-3 p-3">
    <%= simple_form_for([@rocket, @booking], html: { id: "rocketForm", data: { controller: "rocket", action: "submit->rocket#animate" } }) do |f| %>
      <%= f.input :date_range,
                  as: :string,
                  label: "Select date range",
                  input_html: { data: { controller: "datepicker" } } %>
      <%= f.submit class: "btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>
