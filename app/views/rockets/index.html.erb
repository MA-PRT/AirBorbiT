<br>
<div id="index" class="container text-center text-white">
  <h2>Available rockets <i class="fa-solid fa-rocket fa-spin"></i></h2>
  <br>
  <%= link_to "Add your rocket", new_rocket_path, class: "btn btn-light" %>
  <br>
  <div class="row text-center">

    <% @rockets.each do |rocket| %>
      <div class="card rounded-4 col-4 p-0 m-5 w-25 border-1 border-black shadow">
        <img src="<%= rocket.img_url %>" alt="Picture of <%= rocket.name %>" class="card-img-top h-100 rounded-top-4" >
        <div class="card-body">
          <h5 class="card-title mb-2"><strong></strong><%= rocket.name %></h5>
          <p class="card-text m-0"><i class="fa-solid fa-credit-card fa-shake"></i> <%= rocket.price_per_day %>$/day</p>
          <p class="card-text m-0"><%= rocket.number_passengers %> <i class="fa-solid fa-user-astronaut fa-bounce"></i></p>
        </div>
      </div>
    <% end %>

  </div>
</div>
