

<div class="container bg-black border border-3 border-white rounded-5">
  <div class="row justify-content">
    <div class="col-7 bg-light-grey text-white">
    <div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="<%= @rocket.img_url %>" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="<%= @rocket.img_url2 %>" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="<%= @rocket.img_url3 %>" class="d-block w-100" alt="...">
    <div class="col-4 text-white m-4">
      <h1 class="m-3"><%= @rocket.name %></h1>
      <h4 class="m-3">Price : <%= @rocket.price_per_day %> $ / day </h4>
      <h4 class="m-3">Passenger capacity : <%= @rocket.number_passengers %></h4>
      <h5 class="m-3"><%= @rocket.content %></h5>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col text-center">
      <div data-controller="toggle">
        <button data-action="click->toggle#fire" class="btn btn-outline-success btn-lg">
          Book the <%= @rocket.name %>!
        </button>
        <div data-toggle-target="togglableElement" class="d-none mt-3">
          <%= render "bookings/form", rocket: @rocket %>
        </div>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
